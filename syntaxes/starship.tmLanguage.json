{
	"scopeName": "source.uss",
	"fileTypes": ["uss"],
	"patterns": [
	  {
		"include": "#jsx"
	  },
	  {
		"begin": "<script>",
		"end": "</script>",
		"name": "source.ts",
		"patterns": [
		  { "include": "source.ts" }
		]
	  },
	  {
		"begin": "<style>",
		"end": "</style>",
		"name": "source.css",
		"patterns": [
		  { "include": "source.css" }
		]
	  }
	],
	"repository": {
	  "jsx": {
		"patterns": [
		  {
			"name": "entity.name.tag.jsx",
			"match": "</?[a-zA-Z][a-zA-Z0-9]*"
		  },
		  {
			"name": "entity.other.attribute-name.jsx",
			"match": "\\b(\\.?\\w+|\\#\\w+)\\b(?=\\s*=)"
		  },
		  {
			"name": "punctuation.definition.tag.jsx",
			"match": "/?>"
		  },
		  {
			"name": "string.quoted.double.jsx",
			"begin": "\"",
			"end": "\""
		  },
		  {
			"name": "variable.other.readwrite.jsx",
			"match": "\\{\\s*[^}]+\\s*\\}"
		  },
		  {
			"name": "entity.name.function.jsx",
			"match": "\\b(on:\\w+fe)\\b"
		  }
		]
	  }
	}
  }
  